@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2><font color="white">@ViewData["Title"]</font></h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post"></font>
                <h4><font color="white">Create a new account.</font></h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <font color="white">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </font>
                </div>
                <div class="form-group">
                    <font color="white">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </font>
                </div>
                <div class="form-group">
                    <font color="white">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </font>
                </div>
                <button type="submit" class="btn btn-default"><font color="white">Register</font></button>
            </form>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
