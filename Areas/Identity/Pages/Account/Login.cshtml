@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h2><font color="white">@ViewData["Title"]</font></h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <h4><font color="white">Use a local account to log in.</font></h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group WhiteText">
                    <font color="white">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </font>
                </div>
                <div class="form-group WhiteText">
                    <font color="white">
                        <font color="white">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </font>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default"><font color="white">Log in</font></button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><font color="white">Register as a new user</font></a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
